@{
    ViewBag.Title = "Чат";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body>
    <div class="panel-success">
        <div class="panel-heading text-center">
            <h2>Чат</h2>
        </div>

        <div class="panel-body">
            <div id="frmLogin" style="display: none">
                <div class="panel-success text-info">Аутентификация пользователя</div><br />
                <div class="form-group">
                    <label for="login">Login: </label>
                    <input type="text" name="login" id="login" placeholder="Введите логин" autofocus required /><span></span>
                </div>
                <div class="form-group">
                    <label for="login">  Password: </label>
                    <input type="password" name="password" id="password" placeholder="Введите пароль не менее 5 символов" required /><span></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" id="btnLogin" />
                    <input type="button" value="Регистрация" id="btnReg" />
                </div>
            </div>
        </div>
        </div>
        

    <div class="cl-reg" id="frmReg" style="display: none">
        <h3>Регистрация нового пользователя</h3>
        <div class="form-group">
            <label for="loginreg">Login: </label>
            <input type="text" name="loginreg" id="loginreg" placeholder="Введите логин" autofocus required /><span></span><br />
        </div>

        <div class="form-group">
            <label for="firstname">Имя: </label>
            <input type="text" name="firstname" id="firstname" placeholder="Введите имя" />
        </div>
        <div class="form-group">
            <label for="lastname">Фамилия: </label>
            <input type="text" name="lastname" id="lastname" placeholder="Введите фамилию" />
        </div>
        <div class="form-group">
            <label for="email">Почта: </label>
            <input type="text" name="email" id="email" placeholder="Укажите почту" required /><span></span>
        </div>
        <div class="form-group">
            <label for="pwd">Пароль: </label>
            <input type="password" name="pwd" id="pwd" placeholder="Не менее 5 знаков" required /><span></span>
        </div>
        <div class="form-group">
            <label for="pwd2">Повтор пароля: </label>
            <input type="password" name="pwd2" id="pwd2" placeholder="Повторите пароль" required />
        </div>
        <div class="form-group">
            <input type="submit" value="Зарегестрироваться" id="btnRegSend" />
            <input type="button" value="Отмена" id="btnRegCancel" />
        </div>
    </div>


    <div class="cl-chat" id="frmChat" style="display: none">
        <label class="form-group" id="nm"></label>
        <input type='button' value='Выход' id="btnExit"/>
        <div class="form-group" style="border: 2px groove #ccc;padding:10px;">
            <div id="ChatForm" style="overflow: scroll; height: 400px;" data-bind="foreach: Msgs">
                (<b data-bind="text: dt"></b>) <b data-bind="text: name"></b>: <i data-bind="text: msg"></i><br>
            </div>
        </div>

        <br />
        <div class="form-group" data-bind="with: addMessageControl">
            <div class="panel-success text-info">Введите сообщение</div>
            <input id="myMessage" maxlength="500" data-bind="value: myMessage" style="max-width: 600px;width: 600px; " />
            <div style="margin-bottom: 0px;margin-top: 10px;">
                <input type="button" style="width: 220px;" data-bind="click: addMessage" value="Отправить" id="btnSend">
            </div>
        </div>
    </div>

</body>

@section Scripts{
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/app")

}